doctype html
html
  head
    title CUC
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
  body
  div(class="container")
    div(class="header clearfix")
      nav
        ul(class="nav nav-pills pull-right")
          if user
            li(role="presentation")
              a(href="/users/profile") Profile
            li(role="presentation")
              a(href="/users/list") Users
            li(role="presentation")
              a(href="/upload_question") Upload Question
            li(role="presentation")
              a(href="/") Dashboard
            li(role="presentation")
              a(href="/users/logout") Logout
          else
            li(role="presentation")
              a(href="/users/login") Login
            li(role="presentation")
              a(href="/users/register") Register
      h3(class="text-muted")="CUC"

      div(class="row")
        div(class="col-lg-12")
          if typeof(locals.success_msg) != 'object'
            div(class="alert alert-success") #{success_msg}
          if typeof(locals.error_msg) != 'object'
            div(class="alert alert-danger") #{error_msg}
          if typeof(locals.error) != 'object'
            div(class="alert alert-danger") #{error}

          block content

      footer(class="footer")
        p &copy; 2017 CUC, Inc.
